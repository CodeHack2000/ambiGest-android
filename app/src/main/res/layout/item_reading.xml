<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:background="@color/customPurple"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingVertical="6dp">
    <TextView
        android:id="@+id/itemReadings_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2023-09-12"
        style="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/itemReadings_btn_delete"
        app:layout_constraintEnd_toStartOf="@+id/itemReadings_tv_value"
        app:layout_constraintBottom_toBottomOf="@+id/itemReadings_btn_delete"/>
    <TextView
        android:id="@+id/itemReadings_tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="124 m3"
        app:layout_constraintTop_toTopOf="@id/itemReadings_btn_delete"
        style="?attr/textAppearanceHeadline6"
        app:layout_constraintStart_toEndOf="@+id/itemReadings_tv_date"
        app:layout_constraintEnd_toStartOf="@+id/itemReadings_btn_delete"
        app:layout_constraintBottom_toBottomOf="@+id/itemReadings_btn_delete"/>
    <Button
        android:id="@+id/itemReadings_btn_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemReadings_tv_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>